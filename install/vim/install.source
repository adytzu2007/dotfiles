# vim: filetype=sh
# vim

install_package "gvim"

if which vim > /dev/null; then
    make_link "." "${HOME}/.vim"
    make_link "vimrc" "${HOME}/.vimrc"
    make_link "vimrc" "${HOME}/.gvimrc"
    make_link "vimrc" "${HOME}/.nvimrc"

    vim +PluginInstall +qall
else
    debug_print "vim is not installed. Skipping vim files."
fi
